<h4 class="title is-4">
  <%= display_name(@staff) %>
</h4>

<%= if !Enum.empty?(@students) do %>
  <%= render "form.html",
        conn: @conn,
        staff: @staff,
        students: @students,
        discussion_group_changeset: @discussion_group_changeset %>
<% end %>

<%= if Enum.empty?(@discussion_groups) do %>
<div class="notification">
  There are no students
</div>
<% else %>
<table class="table">
  <thead>
    <tr>
      <th style="width:400px;">Name</th>
      <th style="width:20px;">Level</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <%= for dg <- @discussion_groups do %>
      <tr>
        <td>
          <%= display_name(dg.student) %>
          </td>
        <td>
          <%= dg.student.level %>
        </td>
        <td>
          <div class="field is-grouped">
            <p class="control">
              <%= link "View", class: "button is-small", to: student_path(@conn, :show, dg.student.id) %>
            </p>
            <p class="control">
              <%= link "Remove", class: "button is-small", to: discussion_group_path(@conn, :delete_entry, dg.id) %>
            </p>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
