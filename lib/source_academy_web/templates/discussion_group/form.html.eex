<div class="pt-callout">
  <div class="pt-input-group">
    <%= form_for @discussion_group_changeset, discussion_group_path(@conn, :create), fn f -> %>
      <%= hidden_input f, :user_id, value: @staff.id %>
      <div class="pt-select">
        <%= select f, :student_id, Enum.map(@students, &({display_name(&1), &1.id})) %>
      </div>
      <%= submit "Add to DG", class: "pt-button" %>
    <% end %>
  </div>
</div>
